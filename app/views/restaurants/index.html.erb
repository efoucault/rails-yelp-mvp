<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
        <li><%= link_to "#{restaurant.id}. #{restaurant.name}", restaurant_path(restaurant) %> <%= " #{restaurant.address} #{restaurant.category} #{restaurant.phone_number}" %></li>
    <% end %>
  </ul>

  <%= link_to "New restaurant", restaurants_new_path, class: "btn btn-primary" %>
</div>

